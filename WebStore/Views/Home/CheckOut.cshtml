@model ModelCart

<section id="cart_items">
    <div class="container">
        <partial name="Partial/_Breadcrums" />

        <div class="step-one">
            <h2 class="heading">Шаг 1</h2>
        </div>
        <partial name="Partial/_CheckoutOptions" />

        <partial name="Partial/_RegisterReq" />

        <partial name="Partial/_ShopperInformations" />
        <div class="review-payment">
            <h2>Обзор и Оплата</h2>
        </div>

        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Товар</td>
                        <td class="description"></td>
                        <td class="price">Цена</td>
                        <td class="quantity">Количество</td>
                        <td class="total">Сумма</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ItemInCart)
                {
                    <tr>
                        <td class="cart_product">
                            <a href=""><img src="~/images/cart/@item.Pic" alt=""></a>
                        </td>
                        <td class="cart_description">
                            <h4><a href="">@item.Name</a></h4>
                            <p>Индентификатор: @item.ID</p>
                        </td>
                        <td class="cart_price">
                            <p>@item.Priсe</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">
                                <a class="cart_quantity_up" href=""> + </a>
                                <input class="cart_quantity_input" type="text" name="quantity" value="1" autocomplete="off" size="2">
                                <a class="cart_quantity_down" href=""> - </a>
                            </div>
                        </td>
                        <td class="cart_total">
                            <p class="cart_total_price">@item.Priсe</p>
                        </td>
                        <td class="cart_delete">
                            <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                }
                    
                    <tr>
                        <td colspan="4">&nbsp;</td>
                        <td colspan="2">
                            <table class="table table-condensed total-result">
                                <tr>
                                    <td>Сумма стоимости товаров</td>
                                    <td>$59</td>
                                </tr>
                                <tr>
                                    <td>Дополнительный налог</td>
                                    <td>$2</td>
                                </tr>
                                <tr class="shipping-cost">
                                    <td>Стоимость доставки</td>
                                    <td>Бесплатно</td>
                                </tr>
                                <tr>
                                    <td>Общая стоимость</td>
                                    <td><span>$61</span></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="payment-options">
            <span>
                <label><input type="checkbox"> Прямой банковский перевод</label>
            </span>
            <span>
                <label><input type="checkbox"> Оплата карточкой</label>
            </span>
            <span>
                <label><input type="checkbox"> Paypal</label>
            </span>
        </div>
    </div>
</section> <!--/#cart_items-->
