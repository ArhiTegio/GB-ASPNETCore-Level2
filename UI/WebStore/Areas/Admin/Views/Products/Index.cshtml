@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-area="Admin" asp-controller="Products" asp-action="Edit" class="btn btn-success">Добавить новый товар</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(product => product.Name) </th>
            <th> @Html.DisplayNameFor(product => product.Brand) </th>
            <th> @Html.DisplayNameFor(product => product.Section) </th>
            <th> @Html.DisplayNameFor(product => product.ImageUrl) </th>
            <th> @Html.DisplayNameFor(product => product.Price) </th>
            <th> Удалить</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">@Html.DisplayFor(m => product.Name)</a></td>
            <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">@Html.DisplayFor(m => product.Brand.Name)</a></td>
            <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">@Html.DisplayFor(m => product.Section.Name)</a></td>
            <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id"><img src="~/images/shop/@product.ImageUrl" width="60" alt="@product.Name" /></a></td>
            <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">@Html.DisplayFor(m => product.Price)</a></td>
            <td><a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" title="Удалить" class="text-danger">
                <i class="glyphicon glyphicon-remove"></i>
            </a></td>  
        </tr>
    }
    </tbody>
</table>