@model WebStore.Domain.ViewModels.Identity.LoginViewModel
@{
    ViewData["Title"] = "Вход в систему";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Войти в свою учетную запись</h2>
                    <form asp-controller="Account" asp-action="Login" asp-antiforgery="true" method="post">
                        
                        @Html.HiddenFor(model => model.ReturnUrl);

                        <input asp-for="UserName" placeholder="Имя"/>
                        <input asp-for="Password" placeholder="Емайл"/>
                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить параметры входа?
                        </span>
                        <button type="submit" class="btn btn-default">Логин</button>
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">ИЛИ</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Зарегистрироваться под новым пользователем!</h2>
                    <form asp-controller="Account" asp-action="Register"  asp-antiforgery="true" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="Имя пользователя" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input name="ConfirmPassword" id="ConfirmPassword" placeholder="Подтвердить пароль" />

                        <button type="submit" class="btn btn-default">Регистрация</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->