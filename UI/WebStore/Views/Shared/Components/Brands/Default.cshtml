@using WebStore.Data
@using WebStore.Infrastructure.Services
@using WebStore.Services.Data

@model WebStore.Domain.ViewModels.BrandCompliteViewModel

<div class="brands_products">
<!--brands_products-->
<h2>Бренды</h2>
<div class="brands-name">
    <ul class="nav nav-pills nav-stacked">
        @foreach (var brand in Model.Brand)
        {
            <li @(brand.Id == Model.CurrentBrandId ? "class=active" : null)>

                <a asp-controller="Catalog" asp-action="Shop" asp-route-breandId="@brand.Id">
                    <span class="pull-right">(@TestData.Products.Count(x => x.BrandId == brand.Id))</span>@brand.Name
                </a>
            </li>
        }
    </ul>
</div>
</div><!--/brands_products-->